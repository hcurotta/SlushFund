<%= form_tag "/mail/reminder/#{@fund.id}" , :id => "reminder_form" , :style => "display:none" do %>
<p><%= label_tag :subject %>
<%= text_field_tag :subject %></p>
<p><%= label_tag :body %></p>
<p><%= text_area_tag :body ,"", :size => "70x5" %></p>
<p><%= radio_button_tag :recipients , "everyone", true%> Everyone <%= radio_button_tag :recipients , "unpaid"%> Not paid yet</p>
<p><%= submit_tag "Send email" , :confirm => "Are you sure you want send this email out?" %></p>
<% end %>