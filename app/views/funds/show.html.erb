<p id="notice"><%= notice %></p>

<h2>Fund Status Page</h2>
<p>
  <b>Organizer:</b>
  <%= @user.name %>
</p>

<p>
  <b>Name:</b>
  <%= @fund.name %>
</p>

<p>
  <b>Party time:</b>
  <%= @fund.party_time %>
</p>

<p>
  <b>Budget:</b>
  <%= @fund.budget %>
</p>

<p>
  <b>Description:</b>
  <%= @fund.description %>
</p>

<p>Attendee Mailing List</p>

<% @fund.attendees.each do |attendee| %>
<p><%= attendee.name if attendee.invited == false%> <%= link_to "Delete" , "/funds/#{@fund.id}/attendee/#{attendee.id}", :method => "delete" %></p>
<% end %>


<!-- TODO CHANGE THIS STATEMENT TO USE A BEFORE FILTER FOR AUTHORIZATION -->

<%= link_to "Mail these people" , "/mail/#{@fund.id}", :method => "post" %>

<% @fund.requests.each do |request| %>
<p>
<%= request.votes %>
<%= request.item %> 
<%= link_to "Vote Up!", "/funds/#{@fund.id}/request/#{request.id}/vote_up", :method => "post" %>
<%= link_to "Delete" , "/funds/#{@fund.id}/request/#{request.id}", :method => "delete" %></p>
<% end %>


<%= form_for @request  do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
      <%= f.label :item %><br />
      <%= f.text_field :item %>
    </div> 
	<%= f.hidden_field :fund_id, :value => @fund.id %>
	<%= f.submit "Request!" %>
<% end %>

<p><%= link_to "Contribute to the Fund", "/funds/#{@fund.id}/contribute" %></p>
<%= link_to 'Edit', edit_fund_path(@fund) %> |
<%= link_to 'Back', funds_path %>
